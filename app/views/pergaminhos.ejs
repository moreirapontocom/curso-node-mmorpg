<div id="pergaminhos">					
	<h3>Pergaminhos</h3>
	
	<% if (acoes.length) { %>
		<ul>
			<% for (var i = 0; i < acoes.length; i++) { %>

				<%
				var txt_acao = '';
				switch (parseInt(acoes[i].acao)) {
					case 1: txt_acao = 'coletando recursos'; break;
					case 2: txt_acao = 'enforcamento(s) programado'; break;
					case 3: txt_acao = 'em treinamento de histÃ³ria'; break;
					case 4: txt_acao = 'em treinamento de magia'; break;
				}

				var date = new Date();
				var momento_atual = date.getTime();

				var tempo_restante = Math.round((acoes[i].tempo_para_terminar - momento_atual) / 1000);
				%>

				<li>
					<%= acoes[i].quantidade %> <%= txt_acao %> - <small>restam <span class="segundos"><%= tempo_restante %></span> segundos - <a href="#">revogar ordem</a></small>
				</li>
			<% } %>
		</ul>
	<% } %>

</div>